    "eslint-plugin-standard": "^3.0.1",
    "gh-pages": "^1.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "^1.1.1",
    "rollup": "^0.54.0",
