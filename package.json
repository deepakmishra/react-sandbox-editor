    "react-resize-detector": "^3.0.1"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": ">= 16.3.0",
    "react-dom": ">= 16.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
